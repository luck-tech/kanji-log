# =============================================================================
# 開発環境用の変数定義
# =============================================================================
# この変数はmain.tfや各モジュールから参照され、環境固有の設定値を管理

variable "aws_region" {
  description = "AWSリソースを作成するリージョン"
  type        = string
  default     = "ap-northeast-1"  # 東京リージョン（日本からのレイテンシが最小）
}
