{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"],
      "@/utils": ["./src/utils"],
      "@/utils/*": ["./src/utils/*"],
      "@/constants": ["./src/utils/constants"],
      "@/constants/*": ["./src/utils/constants/*"],
      "@/constants/Colors": ["./src/utils/constants/design/colors"],
      "@/constants/Layout": ["./src/utils/constants/design/layout"],
      "@/constants/EventConstants": ["./src/utils/constants/business/event"],
      "@/hooks": ["./src/hooks"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/components": ["./src/components"],
      "@/components/*": ["./src/components/*"],
      "@/components/common": ["./src/components/common"],
      "@/components/common/*": ["./src/components/common/*"],
      "@/components/features": ["./src/components/features"],
      "@/components/features/*": ["./src/components/features/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
